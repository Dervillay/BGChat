# Flask Configuration
FLASK_ENV=development
# Options: development, production

# Frontend URLs (comma-separated, optional)
# Used for CORS configuration. In development, localhost:3000 is automatically allowed.
# Example: FRONTEND_URLS=https://example1.com,https://www.example2.com
FRONTEND_URLS=

# Security
# Generate a secure random key (at least 32 characters)
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# MongoDB Configuration
MONGODB_HOST=your-mongodb-host-here
MONGODB_USERNAME=your-mongodb-username
MONGODB_PASSWORD=your-mongodb-password
MONGODB_DB_NAME=your-database-name

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-auth0-audience
# Algorithm for JWT verification (optional, defaults to RS256)
ALGORITHM=RS256
